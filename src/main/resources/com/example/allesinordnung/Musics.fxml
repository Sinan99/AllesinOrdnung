<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane fx:id="body" minHeight="600.0" minWidth="900.0" style="-fx-background-color: #FFF;"
            xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.allesinordnung.MusicController">
    <Rectangle fx:id="headerBG" fill="#252525" height="110.0" stroke="BLACK" strokeType="INSIDE" strokeWidth="0.0"
               AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"/>
    <VBox alignment="CENTER" minHeight="110.0" minWidth="900.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
          AnchorPane.topAnchor="0.0">
        <Text fill="WHITE" strokeMiterLimit="0.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Music"
              textAlignment="CENTER" textOrigin="CENTER" wrappingWidth="500.0">
            <font>
                <Font name="System Bold" size="40.0"/>
            </font>
        </Text>
    </VBox>
    <VBox alignment="TOP_CENTER" maxWidth="270.0" minHeight="470.0" minWidth="270.0" AnchorPane.bottomAnchor="10.0"
          AnchorPane.leftAnchor="10.0" AnchorPane.topAnchor="120.0">
        <Button fx:id="home" graphicTextGap="0.0" mnemonicParsing="false" onAction="#Home" prefHeight="49.0"
                prefWidth="270.0" style="-fx-background-color: #252525;    -fx-cursor: hand;" text="ðŸ "
                textAlignment="CENTER" textFill="WHITE">
            <font>
                <Font size="23.0"/>
            </font>
            <VBox.margin>
                <Insets bottom="30.0" top="1.0"/>
            </VBox.margin>
        </Button>
        <GridPane alignment="CENTER" vgap="20.0">
            <columnConstraints>
                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="100.0"/>
                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="150.0" percentWidth="0.0"/>
                <ColumnConstraints/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints/>
            </rowConstraints>
            <VBox.margin>
                <Insets/>
            </VBox.margin>
            <Label text="Artist:" GridPane.columnIndex="0" GridPane.rowIndex="0">
                <font>
                    <Font size="15.0"/>
                </font>
            </Label>
            <TextField fx:id="artistNameField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

            <Label text="Title:" GridPane.rowIndex="1">
                <font>
                    <Font size="15.0"/>
                </font>
            </Label>
            <TextField fx:id="songTitleField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

            <Label text="Year:" GridPane.columnIndex="0" GridPane.rowIndex="2">
                <font>
                    <Font size="15.0"/>
                </font>
            </Label>
            <TextField fx:id="songDateField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

            <Label text="Rating:" GridPane.columnIndex="0" GridPane.rowIndex="3">
                <font>
                    <Font size="15.0"/>
                </font>
            </Label>
            <TextField fx:id="ratingField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
            <Label text="Genre:" GridPane.columnIndex="0" GridPane.rowIndex="4">
                <font>
                    <Font size="15.0"/>
                </font>
            </Label>
            <TextField fx:id="genreField" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

            <Label text="Comment:" GridPane.columnIndex="0" GridPane.rowIndex="5">
                <font>
                    <Font size="15.0"/>
                </font>
            </Label>
            <TextField fx:id="commentField" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
        </GridPane>
        <HBox alignment="CENTER" prefHeight="50.0" prefWidth="300.0" spacing="15.0">
            <VBox.margin>
                <Insets bottom="20.0" top="20.0"/>
            </VBox.margin>
            <Button fx:id="cancelAddMusic" mnemonicParsing="false" onAction="#deleteSelectedMusic"
                    prefHeight="40.0" prefWidth="60.0" style="-fx-background-color: red;    -fx-cursor: hand;"
                    text="âŒ" textAlignment="CENTER" textFill="WHITE">
                <font>
                    <Font size="20.0"/>
                </font>
                <padding>
                    <Insets bottom="-5.0" top="-5.0"/>
                </padding>
            </Button>
            <Button fx:id="updateButton" alignment="CENTER" mnemonicParsing="false"
                    onAction="#updateSelectedMusic" prefHeight="40.0" prefWidth="60.0"
                    style="-fx-background-color: #00bbff;    -fx-cursor: hand;" text="ðŸ”„" textFill="WHITE">
                <font>
                    <Font size="20.0"/>
                </font>
                <padding>
                    <Insets bottom="-5.0" top="-5.0"/>
                </padding>
            </Button>
            <Button fx:id="saveMusic" alignment="CENTER" contentDisplay="CENTER" onAction="#addNewMusic"
                    prefHeight="40.0" prefWidth="120.0"
                    style="-fx-background-color: green;    -fx-cursor: hand;" text="Save" textAlignment="CENTER"
                    textFill="WHITE">
                <font>
                    <Font name="System Bold" size="20.0"/>
                </font>
                <padding>
                    <Insets bottom="-5.0" top="-5.0"/>
                </padding>
            </Button>
        </HBox>
        <HBox alignment="CENTER" prefHeight="50.0" prefWidth="300.0">
            <VBox.margin>
                <Insets/>
            </VBox.margin>
            <TextField fx:id="searchField" prefHeight="50.0" prefWidth="220.0" promptText="Search ðŸ”">
                <font>
                    <Font size="20.0"/>
                </font>
            </TextField>
        </HBox>
    </VBox>
    <TableView fx:id="tableView" editable="true" fixedCellSize="0.0" minHeight="470.0" minWidth="600.0"
               stylesheets="@TableViewCSS.css" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="290.0"
               AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="120.0">
        <columns>
            <TableColumn fx:id="songTitleColumn" maxWidth="250.0" minWidth="150.0" prefWidth="-1.0" text="Title"/>
            <TableColumn fx:id="artistNameColumn" maxWidth="200.0" minWidth="110.0" prefWidth="-1.0" text="Artist"/>
            <TableColumn fx:id="songDateColumn" maxWidth="90.0" minWidth="60.0" prefWidth="-1.0" text="Date"/>
            <TableColumn fx:id="ratingColumn" maxWidth="60.0" minWidth="60.0" prefWidth="-1.0" text="â˜…"/>
            <TableColumn fx:id="genreColumn" maxWidth="150.0" minWidth="100.0" prefWidth="-1.0" text="Genre"/>
            <TableColumn fx:id="commentColumn" minWidth="120.0" prefWidth="-1.0" text="Comment"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>
</AnchorPane>
