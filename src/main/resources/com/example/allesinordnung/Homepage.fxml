<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane fx:id="anchorPane" minHeight="600.0" minWidth="900.0" style="-fx-background-color: #FFF;-fx-pref-width: 100%; -fx-pref-height: 100%;" stylesheets="@SizeCSS.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.allesinordnung.AllesinOrdnungController">
<Rectangle fill="#252525" height="150.0" smooth="false" style="-fx-pref-width: 100%; -fx-pref-height: 25%;" width="900.0" />
   <VBox alignment="CENTER" minHeight="150.0" minWidth="900.0">
      <children>
      <Text fill="WHITE" text="Alles in Ordnung">
         <font>
            <Font name="System Bold" size="50.0" />
         </font>
      </Text>
      <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="(!M)" textAlignment="CENTER">
         <font>
            <Font size="24.0" />
         </font>
      </Text>
      </children>
   </VBox>
<GridPane alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="450.0" minWidth="900.0" stylesheets="@HomepageCSS.css" AnchorPane.bottomAnchor="0.0">
    <columnConstraints>
            <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
      <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
        <Button fx:id="openBooks" contentDisplay="CENTER" mnemonicParsing="false" onAction="#openBooks" prefHeight="80.0" prefWidth="300.0" text="Books" textAlignment="CENTER" textFill="WHITE" GridPane.halignment="CENTER">
            <font>
                <Font name="System Bold" size="30.0" />
            </font>
        </Button>
        <Button fx:id="openMusic" layoutX="85.0" layoutY="70.0" mnemonicParsing="false" onAction="#openMusics" prefHeight="80.0" prefWidth="300.0" text="Music" textAlignment="CENTER" textFill="WHITE" GridPane.halignment="CENTER" GridPane.rowIndex="1">
            <font>
                <Font name="System Bold" size="30.0" />
            </font>
        </Button>
   <Button fx:id="openMovies" mnemonicParsing="false" onAction="#openMovies" prefHeight="80.0" prefWidth="300.0" text="Movies" textAlignment="CENTER" textFill="WHITE" GridPane.columnIndex="1">
      <font>
         <Font name="System Bold" size="30.0" />
      </font>
   </Button>
   <Button fx:id="closeProgram" mnemonicParsing="false" onAction="#closeProgram" prefHeight="80.0" prefWidth="300.0" style="-fx-background-color: #252525;" text="Close Program" textAlignment="CENTER" textFill="WHITE" GridPane.columnIndex="1" GridPane.rowIndex="1">
      <font>
         <Font name="System Bold" size="30.0" />
      </font>
   </Button>
    </GridPane>
</AnchorPane>
