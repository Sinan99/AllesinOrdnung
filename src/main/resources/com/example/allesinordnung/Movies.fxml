            <Text fill="WHITE" strokeMiterLimit="0.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Movies Management" textAlignment="CENTER" textOrigin="CENTER" wrappingWidth="500.0">
                <font>
                    <Font name="System Bold" size="40.0" />
                </font>
            </Text>
        </children>
    </VBox>
    <VBox alignment="CENTER" layoutY="100.0" prefHeight="470.0" prefWidth="270.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0">
        <children>
            <Button fx:id="home" graphicTextGap="0.0" mnemonicParsing="false" onAction="#Home" prefHeight="57.0" prefWidth="270.0" style="-fx-background-color: #252525;" text="🏠" textAlignment="CENTER" textFill="WHITE">
