            </Button>
            <GridPane alignment="CENTER_LEFT" vgap="20.0">
                <columnConstraints>
                    <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    <ColumnConstraints />
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints />
                    <RowConstraints percentHeight="0.0" />
                    <RowConstraints />
                </rowConstraints>
                <children>
                    <Label text="Director:" GridPane.columnIndex="0" GridPane.rowIndex="0">
                        <font>
                            <Font size="15.0" />
                        </font>
                    </Label>
                    <TextField fx:id="directorField" GridPane.columnIndex="1" />

                    <Label text="Title:" GridPane.rowIndex="1">
                        <font>
                            <Font size="15.0" />
                        </font>
                    </Label>
                    <TextField fx:id="titleField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                    <Label text="Release Year:" GridPane.columnIndex="0" GridPane.rowIndex="2">
                        <font>
                            <Font size="15.0" />
                        </font>
                    </Label>
                    <TextField fx:id="releaseYearField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                    <Label text="Genre:" GridPane.columnIndex="0" GridPane.rowIndex="3">
                        <font>
                            <Font size="15.0" />
                        </font>
                    </Label>
                    <TextField fx:id="genreField" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                    <Label text="Rating:" GridPane.columnIndex="0" GridPane.rowIndex="4">
                        <font>
                            <Font size="15.0" />
                        </font>
                    </Label>
                    <TextField fx:id="ratingField" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                    <Label text="Comment:" GridPane.columnIndex="0" GridPane.rowIndex="5">
                        <font>
                            <Font size="15.0" />
                        </font>
                    </Label>
                    <TextField fx:id="commentField" GridPane.columnIndex="1" GridPane.rowIndex="5" />

                </children>
            </GridPane>
            <HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0">
                <children>
                    <Button fx:id="cancelAddMovie" mnemonicParsing="false" onAction="#deleteSelectedMovie" prefHeight="40.0" prefWidth="60.0" style="-fx-background-color: red;" text="❌" textAlignment="CENTER" textFill="WHITE">
                        <font>
                            <Font size="20.0" />
                        </font>
                        <padding>
                            <Insets bottom="-5.0" top="-5.0" />
                        </padding>
                    </Button>
                    <Button fx:id="updateButton" alignment="CENTER" mnemonicParsing="false" onAction="#updateSelectedMovie" prefHeight="40.0" prefWidth="60.0" style="-fx-background-color: #00bbff;" text="🔄" textFill="WHITE">
                        <font>
                            <Font size="20.0" />
                        </font>
                        <padding>
                            <Insets bottom="-5.0" top="-5.0" />
                        </padding>
                        <HBox.margin>
                            <Insets left="15.0" right="15.0" />
                        </HBox.margin>
                    </Button>
                    <Button fx:id="saveMovie" alignment="CENTER" contentDisplay="CENTER" onAction="#addNewMovie" prefHeight="40.0" prefWidth="120.0" style="-fx-background-color: green;" text="Speichern" textAlignment="CENTER" textFill="WHITE">
                        <font>
                            <Font name="System Bold" size="20.0" />
                        </font>
                        <padding>
                            <Insets bottom="-5.0" top="-5.0" />
                        </padding>
                        <HBox.margin>
                            <Insets />
                        </HBox.margin>
                    </Button>
                </children>
                <VBox.margin>
                    <Insets top="20.0" />
                </VBox.margin>
            </HBox>
            <HBox alignment="CENTER" prefHeight="50.0" prefWidth="300.0">
                <children>
                    <TextField fx:id="searchField" prefHeight="50.0" prefWidth="220.0" promptText="Suchen">
                        <font>
                            <Font size="20.0" />
                        </font>
                    </TextField>
                    <Button mnemonicParsing="false" prefHeight="50.0" prefWidth="60.0" style="-fx-background-color: #252525;" text="🔍" textAlignment="CENTER" textFill="WHITE">
                        <font>
                            <Font size="23.0" />
                        </font>
                    </Button>
                </children>
                <VBox.margin>
                    <Insets top="20.0" />
                </VBox.margin>
            </HBox>
        </children>
    </VBox>
    <TableView fx:id="tableView" fixedCellSize="0.0" layoutX="300.0" layoutY="100.0" prefHeight="470.0" prefWidth="595.0" stylesheets="@TableViewCSS.css" AnchorPane.bottomAnchor="11.0" AnchorPane.rightAnchor="10.0">
        <columns>
            <TableColumn fx:id="titleColumn" prefWidth="150.0" styleClass="header" text="Title" />
            <TableColumn fx:id="directorColumn" prefWidth="120.0" styleClass="header" text="Director" />
            <TableColumn fx:id="releaseYearColumn" prefWidth="50.0" styleClass="header" text="Release Year" />
            <TableColumn fx:id="genreColumn" minWidth="8.7999267578125" prefWidth="141.599853515625" styleClass="header" text="Genre" />
            <TableColumn fx:id="ratingColumn" prefWidth="60.0" styleClass="header" text="★" />
            <TableColumn fx:id="commentColumn" prefWidth="120.80020141601562" styleClass="header" text="Comment" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>
</AnchorPane>
